@model Interview.Models.InvoiceDetail

@{
    ViewData["Title"] = "New";
    SelectList unitItems = new SelectList(ViewBag.Units, "Id", "Name");

}

<h1>New</h1>

<h4>InvoiceDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form >
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LineNo" class="control-label"></label>
                <input asp-for="LineNo" class="form-control" />
                <span asp-validation-for="LineNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitNo" class="control-label"></label>
                <select asp-for="UnitNo" class="form-control" asp-items="unitItems">

                </select>
                <span asp-validation-for="UnitNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" onchange="CalcTotal()" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" onchange="CalcTotal()"/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Total" class="control-label"></label>
                <input asp-for="Total" class="form-control"  readonly="readonly"/>
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpiryDate" class="control-label"></label>
                <input asp-for="ExpiryDate" class="form-control" />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="New" class="btn btn-primary"  formaction="New" formmethod="post"/>
                <input type="submit" value="Save" class="btn btn-primary" formaction="Edit" formmethod="post" />
                <input type="submit" value="Delete" class="btn btn-primary" formaction="Delete" formmethod="post" />

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function CalcTotal() {
            var price = document.getElementById("Price").value;
            var Quantity = document.getElementById("Quantity").value;
            document.getElementById("Total").value = price * Quantity;
        }
    </script>
}
